<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">
    
    <persistence-unit name="TodoAppDatabase">
        <jta-data-source>java:app/jdbc/TodoAppDatabase</jta-data-source>
        <shared-cache-mode>ALL</shared-cache-mode>
        <!-- Add other classes here -->
        <properties>
            <!-- Schema generation scripts -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.create-script-source" value="h2/create-script.sql"/>
            <property name="jakarta.persistence.schema-generation.drop-script-source" value="h2/drop-script.sql"/>
            <property name="jakarta.persistence.sql-load-script-source" value="h2/load-script.sql"/>
        </properties>
    </persistence-unit>
</persistence>